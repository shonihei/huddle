{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": ["error", { "code": 80, "tabWidth": 2 }],
        "no-console": "off",
        "camelcase": 0,
        "operator-linebreak": "off",
        "indent": ["error", 2, { "MemberExpression": 1 }],
        "no-underscore-dangle": "off"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}